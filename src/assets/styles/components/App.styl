@import "../Vars.styl"

body
  font-family font-family
  margin 0
  padding 0
  height 100%
  overflow-x hidden
  font-size font-sizeXS

h1, h2
  padding 0
  margin 0

h1
  font-size h1-size
  text-align center
  padding-top 40px
  padding-bottom 20px

h2
  font-size h2-size

h3
  font-size h3-size

hr
  border-bottom 1px solid rgba(255,255,255,0.2)
  opacity 0.2

button:focus
  outline:0


@media screen and (max-width 425px)
  h1
    font-size h1-sizeXS

@media screen and (max-width 425px)
  body
    font-size font-sizeS
