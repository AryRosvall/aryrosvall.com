@import "../Vars.styl"

.Profile
  width 100vw
  background-color lightColor
  text-align center
  padding-top 50px
  & h1
    padding-bottom 10px
    margin-bottom 10px
  & figure img
    border-radius 2px
    border 3px solid borderAvatarColor
    width 200px
    box-shadow 0 10px 14px rgba(0, 0, 0, .2);

.Profile__Container
  margin 0 auto
  width 60%

.Profile__Description
  padding 10px 0 70px
  display grid
  grid-template-columns auto auto
  & p
    display flex
    align-self center
    text-align center
    font-size 18px

@media screen and (max-width 768px)

  .Profile__Description
    display grid
    grid-template-rows auto auto
    grid-template-columns 100%
