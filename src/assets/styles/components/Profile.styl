@import "../vars.styl"

.Profile
  width 100vw
  background-color #F7F8FC
  text-align center
  color black
  & h1
    padding-bottom 10px
    margin-bottom 10px
  & figure img
    border-radius 50%
    border 1px solid #DFE0E0
    width 200px
    box-shadow: 0 10px 14px rgba(0, 0, 0, .2);

.Profile__Container
  margin 0 auto
  width 60%

.Profile__Description
  padding 50px 0
  display grid
  grid-template-columns auto auto
  & p
    display flex
    align-self center
    text-align center
    font-size 18px
