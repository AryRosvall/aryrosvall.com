@import "../vars.styl"

.Academic
  margin auto
  width width-L

.Academic__item
  display grid
  grid-template-columns 1fr 2fr
  padding-top 20px

.Academic__info
  padding 15px 50px 15px 0

.Academic__degree
  font-weight bold
  font-size font-size

.Academic__institution
  font-style italic

.Academic__description
  text-align justify

.Academic__location
  & a
    text-decoration none
    color dark
  & div
    margin 10px 0 20px 0
    & :nth-child(1)
      padding-right 15px
      color highlightColor2

@media screen and (max-width 768px)
  .Academic
    width width-M

@media screen and (max-width 425px)
  .Academic
    width width-XS
    font-size font-sizeXS

  .Academic__item
    display grid
    grid-template-columns 100%
    padding-top 20px
    & p
      margin 2px 0

  .Academic__info
    display grid
    grid-template-rows repeat(2, 1fr)
    padding-bottom 15px
    text-align left

  .Academic__degree-description
    display none

  .Academic__location div
    margin 10px 0 20px 20px